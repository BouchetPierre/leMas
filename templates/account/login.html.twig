{% extends 'base.html.twig' %}

{% block title %}Connexion au site !{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-5">
        <div class="col-md-2 col-1"></div>
        <div class="col-md-8 col-10">
            <div class="bg-light py-5 px-3">
                <h1>Connectez vous !</h1>

                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, mot de passe ou mail invalide</div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email ..." required value="{{ username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe ..." required>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success"><i class="fas fa-lock-open"></i> Connexion !</button>
                        </div>
                        <div class="col-6">
                            <a href="{{ path('request_resetting') }}" class="btn btn-warning"><i class="fas fa-question"></i> Mot de passe oubli√© !</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
