{% extends 'base.html.twig' %}

{% block title %}Modification d'une annonce{% endblock %}

{% block body %}


    <div class="container bg-light py-5">
        <h1 class="decalage">Modifier l'annonce {{ annonce.title }}</h1>

        {{ form_start(form) }}
        <div class="form-groupe " >
            <div class="mt-3">
                {{ form_label(form.title) }}
                {{ form_widget(form.title) }}
            </div>
            <div class="mt-3">
                {{ form_label(form.introduction) }}
                {{ form_widget(form.introduction) }}
            </div>
            <div class="mt-3">
                {{ form_label(form.content) }}
                {{ form_widget(form.content) }}
            </div>
            <div class="mt-3 ">
                {{ form_row(form.imageFile,{
                    attr:{
                        'placeholder': 'Selectionnez une image,  facultatif'
                    }
                })
                }}
            </div>
            <div>
                <strong>{{ form_label(form.type) }}</strong>
                <div class="row">
                    <div class="col-4">
                        <h6><u>Help Matériel</u></h6>
                        {{ form_widget(form.type[0]) }}
                        {{ form_widget(form.type[1]) }}
                        {{ form_widget(form.type[2]) }}
                    </div>
                    <div class="col-4">
                        <h6><u>Idées Festives</u></h6>
                        {{ form_widget(form.type[3]) }}
                        {{ form_widget(form.type[4]) }}
                        {{ form_widget(form.type[5]) }}
                    </div>
                    <div class="col-4">
                        <h6><u>Services à la carte</u></h6>
                        {{ form_widget(form.type[6]) }}
                        {{ form_widget(form.type[7]) }}
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Valider et publier</button>
        {{ form_end(form) }}

    </div>


{% endblock %}